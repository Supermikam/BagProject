@using System.Security.Claims 

<!DOCTYPE html>
<html ng-app="bagApp">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Quality Bags</title>
    <environment names="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
        <link rel="stylesheet" asp-href-include="/lib/fontawesome/css/*.css" />
        <link rel="stylesheet" asp-href-include="/css/site.css"/>
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <link href="https://fonts.googleapis.com/css?family=Gloria+Hallelujah|Righteous|Nova+Flat|
	Lalezar|Bungee+Inline|Cuprum|Exo+2|Amatic+SC|Libre+Franklin|Josefin+Sans|Yanone+Kaffeesatz|Oswald" rel="stylesheet">
        

    </environment>
    <environment names="Staging,Production">
        <link href="https://fonts.googleapis.com/css?family=Gloria+Hallelujah|Righteous|Nova+Flat|
	Lalezar|Bungee+Inline|Cuprum|Exo+2|Amatic+SC|Libre+Franklin|Josefin+Sans|Yanone+Kaffeesatz|Oswald" rel="stylesheet">
        <link rel="stylesheet" asp-href-include="/css/site.css" />
        <link rel="stylesheet" href="~/css/bootstrap.min.css" 
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-K+ctZQ+LL8q6tP7I94W+qzQsfRV2a+AfHIi9k8z8l9ggpc8X+Ytst4yBo/hH+8Fk">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                crossorigin="anonymous"
                integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa">
        </script>
    </environment>
</head>
<body>
    <div class='container-fluid'>
        <!-- Navigation Section -->
        <div class='row' id='nav'>
            <div class='col-md-3' id='logo-text'>
                <a asp-action="GetAllProduct"
           asp-controller="Product"
           asp-route-category="" 
           asp-route-page="1"> <img src='~/images/logo.png'>Quality Bags</a>
            </div>
            <div class='col-md-6' id='nav-button'>
                @await Component.InvokeAsync("MenuItem")
            </div>
            <div class='col-md-3' id='cart'>
                @if (User.Identity.IsAuthenticated)
                {
                    <a asp-controller="Account" asp-action="GetUserDetail">Account</a>
                    <a asp-controller="Account" asp-action="Logout">Logout</a>
                }
                else
                {
                    <a asp-controller="Account" asp-action="Login">Login</a>
                    
                } 
                @await Component.InvokeAsync("CartIcon")
            </div>
        </div>

        <!--Main Body-->
        <div class="row">
            @RenderBody()
        </div>
    </div>
</body>
</html>
