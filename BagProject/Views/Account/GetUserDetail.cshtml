@model UserDetailViewModel

<div class="container-fluid">
    <div class="row">
        <h1>@Model.User.CustomerName's Detail </h1>
        <div class="col-md-6 col-md-offset-3">
            <p>Email: @Model.User.Email</p>
            <p>Name: @Model.User.CustomerName</p>
            <p>Address: @Model.User.Address</p>
            <p>Home Phone: @Model.User.HomePhone</p>
            <p>Work Phone: @Model.User.WorkPhone</p>
            <p>Mobile Phone: @Model.User.MobilePhone</p>
        </div>      
    </div>

    @if (@Model.Orders.Count() > 0)
    {
        <h1>Your Orders</h1>   
        @foreach (Order order in Model.Orders)
        {
            <h2>Order Detail</h2>
            <div class="row">
                <div class="col-md-3 col-md-offset-2">Product Name</div>
                <div class="col-md-3">Product Price</div>
                <div class="col-md-3">Quantity</div>
            </div>
                @foreach (OrderLine line in order.OrderLines)
                {
                    <div class="row">
                        <div class="col-md-3 col-md-offset-2">
                            @line.Product.ProductName
                        </div>
                        <div class="col-md-3">
                            @line.Product.Price.ToString("c");
                        </div>
                        <div class="col-md-3">
                            @line.Quantity;
                        </div>
                    </div>

                }


            <div class="row">
                <div class="col-md-4 col-md-offset-7">
                    Shipping Staus: @order.ShippingStatus
                </div>
            </div>
        }
    }
    
</div>
