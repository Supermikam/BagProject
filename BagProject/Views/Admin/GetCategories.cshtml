@model IEnumerable<Category>
@{
    Layout = "_AdminLayout";
}

<div class="bg-primary panel-body"><h4>Customer Accounts</h4></div>
<table class="table table-condensed table-bordered">
    <tr><th>ID</th><th>Name</th><th>Operations</th></tr>
    @if (Model.Count() == 0)
    {
        <tr><td colspan="3" class="text-center">No Categories</td></tr>
    }
    else
    {
        foreach (Category cat in Model)
        {
            <tr>
                <td>@cat.CategoryID</td>
                <td>@cat.CategoryName</td>
                <td>
                    <a asp-action="DeleteCategory" class="btn btn-sm btn-danger"
                       asp-route-catId="@cat.CategoryID">
                        Delete
                    </a>
                    <a asp-action="EditCategory" class="btn btn-sm btn-success"
                       asp-route-catId="@cat.CategoryID">Edit</a>
                </td>
            </tr>
        }
        
    }
</table>
<div class="text-center">
    <a asp-action="CreateCategory" class="btn btn-sm btn-primary"
       asp-controller="Admin">New Category</a>
</div>
