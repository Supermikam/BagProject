@model IEnumerable<Supplier>
@{
    Layout = "_AdminLayout";
}

<div class="bg-primary panel-body"><h4>Supplier</h4></div>
<table class="table table-condensed table-bordered">
    <tr><th>ID</th><th>Name</th><th>Work Phone</th><th>Operations</th></tr>
    @if (Model.Count() == 0)
    {
        <tr><td colspan="4" class="text-center">No Suppliers</td></tr>
    }
    else
    {
        foreach (Supplier supplier in Model)
        {
            <tr>
                <td>@supplier.SupplierID</td>
                <td>@supplier.SupplierName</td>
                <td>@supplier.WorkPhone</td>
                <td>
                    <a asp-action="DeleteSupplier" class="btn btn-sm btn-danger"
                       asp-route-supplierId="@supplier.SupplierID">
                        Delete
                    </a>
                    <a asp-action="EditSupplier" class="btn btn-sm btn-success"
                       asp-route-supplierId="@supplier.SupplierID">Edit</a>
                </td>
            </tr>
        }
    }
</table>

<div class="text-center">
    <a asp-action="CreateSupplier" class="btn btn-primary">Add Supplier</a>
</div>